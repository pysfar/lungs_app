<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/eg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/eg" />

    <ImageView
        android:id="@+id/med"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/med" />


    <ImageView
        android:id="@+id/nrct"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"


        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/nrct" />

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/eg"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/white_boarder"
            android:elevation="100dp"
            android:outlineAmbientShadowColor="@color/e"
            tools:targetApi="P">

            <Button
                android:id="@+id/learn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="LEARNING"
                android:textAllCaps="false"
                android:textColor="@color/a"
                android:fontFamily="@font/kanit_medium"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/white_boarder"
            android:elevation="100dp"
            android:outlineAmbientShadowColor="@color/e"
            tools:targetApi="P">

            <Button
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="?attr/selectableItemBackground"
                android:text="TESTING"
                android:fontFamily="@font/kanit_medium"
                android:textAllCaps="false"
                android:textColor="@color/a"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/white_boarder"
            android:elevation="100dp"
            android:outlineAmbientShadowColor="@color/e"
            tools:targetApi="P">

            <Button
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/kanit_medium"
                android:layout_marginBottom="0dp"
                android:background="?attr/selectableItemBackground"
                android:text="QUIZ"
                android:textAllCaps="false"
                android:textColor="@color/a"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_below="@+id/quiz"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="325dp"
            android:background="@drawable/white_boarder"
            android:elevation="100dp"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/e"
            tools:targetApi="P">

            <Button
                android:id="@+id/how"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="วิธีการใช้งาน"
                android:fontFamily="@font/kanit_medium"
                android:textAllCaps="false"
                android:textColor="@color/a"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_below="@+id/how"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="325dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginTop="50dp"
            android:layout_marginRight="325dp"
            android:background="@drawable/white_boarder"
            android:elevation="100dp"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/e"
            tools:targetApi="P">


            <Button
                android:id="@+id/ref"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="อ้างอิง"
                android:textAllCaps="false"
                android:textColor="@color/a"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>